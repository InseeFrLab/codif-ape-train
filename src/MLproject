name: ape-classifier

entry_points:
  main:
    parameters:
      remote_server_uri: {type: str, default: https://mlflow.lab.sspcloud.fr}
      experiment_name: {type: str, default: test}
      run_name: {type: str, default: default}
      data_url: {type: str, default: ../data/extraction_sirene_sample.parquet}
      dim: {type: int, default: 30}
      epoch: {type: int, default: 5}
      wordNgrams: {type: int, default: 3}

    command: "python main.py {remote_server_uri} {experiment_name} {run_name} {data_url} {dim} {epoch} {wordNgrams}"
